<html>
    <head>
        <meta charset="UTF-8">
        <title>Create</title>
    </head>
    <body>
        <form action="/create" method="POST">
            <h2>Nueva pelicula</h2>
            <h4>Titulo</h4>
            <input type="text" name="title">
            <h4>Rating</h4>
            <input type="number" step="0.01" min="0" max="10" name="rating">
            <h4>Premios</h4>
            <input type="number" name="awards">
            <h4>Fecha de lanzamiento</h4>
            <input type="date" name="release_date">
            <h4>Genero</h4>
            <select name="genre_id">
                <%genres.forEach(genre =>{%>
                <option value="<%=genre.id%>"><%=genre.name%></option>
                <% }) %>
            </select>
            <h4>Actores:</h4>
            <select multiple name="actor_array" multiple>
                <%actors.forEach(actor =>{%>
                <option value="<%=actor.id%>"><%=actor.first_name%> <%=actor.last_name%></option>
                <% }) %>
            </select>
            <button type="submit"> Crear </button>
        </form>
    </body>
</html>